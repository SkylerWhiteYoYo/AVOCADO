package newproject;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.PreparedStatement;

public class database {
	

	public static void main(String[] args) {
		PreparedStatement pstmt = null;
		
		try {
			// MySQL DB용 드라이로드
			Class.forName("com.mysql.cj.jdbc.Driver");
			// DB연결 
			Connection conn =
			DriverManager.getConnection("jdbc:mysql://new-db.crnbwzhpnodx.ap-northeast-2.rds.amazonaws.com/newdb", "admin", "Rlawls1754!");
			System.out.println("mysql db 연결 성공");
			
			String sql = "create table EMPLOYEE("
					+ "EMPLOYEE_ID NUMBER(5) NOT NULL, "
					+ "NAME VARCHAR(20) NOT NULL, "
					+ "SALARY NUMBER(10) NOT NULL, "
					+ "PRIMARY KEY (EMPLOYEE_ID) )";;
			
			pstmt = conn.prepareStatement(sql);
			
			int cnt = pstmt.executeUpdate();
			
			pstmt.close();
			conn.close();
			System.out.println("mysql 연결해제 성공");
		}
		catch(ClassNotFoundException error) {
			System.out.println("mysql driver 미설치 또는 드라이버 이름 오류");
		}
		catch(SQLException error) {
			System.out.println("DB접속오류");
		}
		
	}

	

}
